<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.outofprintmagazine</groupId>
  <artifactId>oopcorenlp_corpus_cli</artifactId>
  <name>OOP Core NLP Corpus CLI</name>
  <version>1.0</version>
  <description>CLI interface to oopcorenlp_corpus library</description>
  <url>https://beta.outofprintmagazine.io</url>
  <issueManagement>
    <system>Github</system>
    <url>https://github.com/rsadasiv/oopcorenlp_corpus_cli.git/</url>
  </issueManagement>
  <developers>
    <developer>
      <id>rsadasiv</id>
      <name>Ram Sadasiv</name>
      <email>io.outofprintmagazine@gmail.com</email>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GPL-3.0-or-later</name>
      <url>https://www.gnu.org/licenses/gpl-3.0-standalone.html</url>
    </license>
  </licenses>
  <scm>
    <url>https://github.com/rsadasiv/oopcorenlp_corpus_cli.git</url>
  </scm>
  <organization>
    <name>Out Of Print Magazine</name>
    <url>http://beta.outofprintmagazine.io</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>io.outofprintmagazine.corpus.App</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>${maven-site-plugin.version}</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.skins</groupId>
            <artifactId>maven-fluido-skin</artifactId>
            <version>${maven-fluido-skin.version}</version>
          </dependency>
          <dependency>
            <groupId>org.apache.maven.doxia</groupId>
            <artifactId>doxia-site-renderer</artifactId>
            <version>${doxia-site-renderer.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>${maven-project-info-reports-plugin.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${maven-javadoc-plugin.version}</version>
        <reportSets>
          <reportSet>
            <reports>
              <report>javadoc-no-fork</report>
              <report>test-javadoc-no-fork</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
  <properties>
    <maven-javadoc-plugin.version>3.2.0</maven-javadoc-plugin.version>
    <java.version>1.8</java.version>
    <maven-shade-plugin.version>3.2.3</maven-shade-plugin.version>
    <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    <maven-project-info-reports-plugin.version>3.1.0</maven-project-info-reports-plugin.version>
    <maven-site-plugin.version>3.9.1</maven-site-plugin.version>
    <java.release.version>11</java.release.version>
    <doxia-site-renderer.version>1.9.2</doxia-site-renderer.version>
    <commons-cli.version>1.4</commons-cli.version>
    <maven-fluido-skin.version>1.9</maven-fluido-skin.version>
    <oopcorenlp.version>1.0</oopcorenlp.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jackson.version>2.11.0</jackson.version>
  </properties>
</project>
